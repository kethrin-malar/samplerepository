package com.insurance.demo.service.impl;


	import org.springframework.beans.factory.annotation.Autowired;
	import org.springframework.stereotype.Service;

	import com.insurance.demo.entity.UserEntity;
	import com.insurance.demo.repository.UserRepository;
	import com.insurance.demo.service.UserService;


	@Service
	public class UserServiceImpl implements UserService {
	    @Autowired
	    //private UserRepository policyRepository;
	    public UserService(UserRepository userRepository) {
	        this.userRepository = userRepository;
	    }

	    public User getUserByUsername(String username) {
	        return userRepository.findByUsername(username);
	    }
	    @Override
	    public String createUser(UserEntity user) {
	    	policyRepository.save(user);
	    	return "Login";
	    }
	        
	}



